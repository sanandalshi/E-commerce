<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HOME PAGE OF THE BOOK SHOP</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f1faee;
            margin: 0;
            padding: 20px;
            color: #1d3557;
        }

        h1 {
            text-align: center;
            margin-bottom: 30px;
            color: #1d3557;
            animation: fadeIn 2s ease-in-out;
        }

        .container {
            max-width: 960px;
            margin: 0 auto;
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
            gap: 20px;
            animation: slideIn 1s ease-in-out;
        }

        .product-item {
            background-color: #ffffff;
            padding: 20px;
            margin: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            width: 300px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .product-item:hover {
            transform: translateY(-10px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        }

        .product-item p {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 10px;
            color: #457b9d;
        }

        .product-item img {
            max-width: 100%;
            height: auto;
            border-radius: 8px;
            margin-bottom: 10px;
            transition: transform 0.3s ease;
        }

        .product-item img:hover {
            transform: scale(1.05);
        }

        button {
            background-color: #457b9d;
            color: #ffffff;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
            border-radius: 4px;
            font-size: 16px;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

        button:hover {
            background-color: #1d3557;
            transform: scale(1.05);
        }

        .cart-button {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        .cart-button button {
            background-color: #28a745;
            color: #ffffff;
            padding: 12px 24px;
            font-size: 20px;
        }

        .cart-button button:hover {
            background-color: #218838;
        }

        a {
            color: #e63946;
            margin: 0 5px;
            text-decoration: none;
            font-weight: bold;
            transition: color 0.3s ease;
        }

        a:hover {
            color: #1d3557;
        }

        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        @keyframes slideIn {
            from { transform: translateY(20px); opacity: 0; }
            to { transform: translateY(0); opacity: 1; }
        }
    </style>
</head>
<body>
    <h1>HOME PAGE OF THE BOOK SHOP</h1>

    <div class="container">
        <% products.forEach(product => { %>
        <div class="product-item">
            <p><%= product.title %></p>
            <img src="/<%= product.image %>" alt="<%= product.title %>">

            <p>Price: â‚¹ <%= product.price %></p>
            <form action="/product/<%= product.id %>/<%= product.title %>" method="POST">
                <input type="hidden" name="image" value="<%= product.image %>"/>
                <button type="submit">DETAILS</button>
            </form>
            <% if(session==true) { %>
            <form action="/cart" method="POST">
                <label for="quan">Quantity:</label>
                <input type="number" name="quan" min="1" step="1"/>
                <input type="hidden" name="id" value="<%= product.id %>">
                <input type="hidden" name="title" value="<%= product.title %>">
                <input type="hidden" name="price" value="<%= product.price %>">
                <input type="hidden" name="image" value="<%= product.image %>">
                <button type="submit">ADD TO CART</button>
            </form>
            <% } %>
        </div>
        <% }) %>
    </div>
    <div class="cart-button">
        <% if(session==true) { %>
        <form action="/cartarray" method="GET">
            <button>CART</button>
        </form>
        <% } %>
    </div>
    <div class="pagination" style="text-align:center; margin-top: 20px;">
        <a href="/home/?page=1">1</a>
        <a href="/home/?page=2">2</a>
        <a href="/home/?page=3">3</a>
        
    </div>
</body>
</html>
